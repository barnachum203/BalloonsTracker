{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "target": "es6",
    "rootDir": "node-rest-api",
    "types": ["node"],
    "lib": ["es6"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "lib": ["es2015"],
  "include": ["/**/*.ts", "/**/*.js"],
  "exclude": ["node_modules", "<node_internals>/**"]
}
